<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context="com.example.campus_comuputer.sqldatabasesample.CoursesEditActivity">

    <TextView
        android:id="@+id/textViewModifyCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:text="CourseName" />

    <EditText
        android:id="@+id/editTextModifyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignLeft="@+id/editTextModifyGrade"
        android:layout_alignStart="@+id/editTextModifyGrade"
        android:layout_below="@+id/textViewModifyCourseName"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextModifyGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextModifyNumber"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextModifyNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextModifyGrade"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:text="Grade" />

    <Button
        android:id="@+id/buttonModifySave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonModifyListAll"
        android:layout_alignBottom="@+id/buttonModifyListAll"
        android:layout_alignLeft="@+id/editTextModifyNumber"
        android:layout_alignStart="@+id/editTextModifyNumber"
        android:text="Save and List All" />

    <Button
        android:id="@+id/buttonModifyListAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextModifyGrade"
        android:layout_alignStart="@+id/editTextModifyGrade"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="List ALL"
        android:visibility="invisible" />
</RelativeLayout>
